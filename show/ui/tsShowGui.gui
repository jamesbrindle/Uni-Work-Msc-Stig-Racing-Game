function TSShowGui::onWake(%this)
{
   GlobalActionMap.bindcmd(keyboard, "tab", "", "toggleMouse();");
   showMoveMap.push();
}

function TSShowGui::onSleep(%this)
{
   GlobalActionMap.unbind(keyboard, "tab");
   showMoveMap.pop();
}


